<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sample Express App</title>
	</head>
	<body>
		<h1>Sample Express App</h1>
		<div>
			<% if (!user) { %>
			<a href="/login"><button>Login</button></a>
			<a href="/signup">
				<button>Sign Up</button>
			</a>
			<% } else { %>
			<h1>Welcome <%= user.f_name %> <%= user.l_name %></h1>
			<a href="/logout"><button>Logout</button></a>
			<% } %>
		</div>
		<div>
			<% posts.forEach(post => { %>
			<div>
				<h3><%= post.title %></h3>
				<p>Author: <%= post.user.f_name %> <%= post.user.l_name %></p>
				<p><%= post.content %></p>
			</div>
			<% }) %>
		</div>
	</body>
</html>
